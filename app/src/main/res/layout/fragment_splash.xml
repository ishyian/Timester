<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/offset80"
            android:layout_height="@dimen/offset80"
            app:srcCompat="@drawable/ic_logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/offset16"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="@color/colorTextPrimary"
            android:textFontWeight="800"
            android:textSize="@dimen/text30" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/offset24"
        android:fontFamily="@font/open_sans"
        android:text="@string/team_name"
        android:textAlignment="center"
        android:textColor="@color/colorTextPrimary"
        android:textFontWeight="800"
        android:layout_marginBottom="@dimen/offset24"
        android:textSize="@dimen/text16"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>